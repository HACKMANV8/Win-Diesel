{
  "manifest_version": 3,
  "name": "YouTube Upload Transcript Extractor",
  "version": "1.1.0",
  "description": "Automatically extract transcripts from videos being uploaded to YouTube",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://studio.youtube.com/*",
    "https://api.assemblyai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://studio.youtube.com/*"],
      "js": ["youtube-upload-interceptor.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background-simple.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Transcript Extractor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}

